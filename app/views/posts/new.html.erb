<h1>New post in a category</h1>


<div class="row">
 <div class="col-md-6 col-md-offset-3">
  
  <%= form_for([@category, @post]) do |f| %>
  
   <%= f.label :title %> <br/>
   <%= f.text_field :title %> <br/><br/>
  
   <%= f.label :body %> <br/>
   <%= f.text_area :body %><br/><br/>
   
   <%= f.label :photo %> <br/>
   <%= f.file_field :photo %> <br/><br/>
  
    <%= f.submit class: "btn btn-primary" %> 
  <%end%>
  
  </div>
</div>
